<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_adapter_id"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recycler_adapter_avartar_url" android:layout_marginStart="8dp"/>
    <ImageView
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars[4]"
            android:id="@+id/recycler_adapter_avartar_url"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
    />
    <TextView
            android:text="type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_adapter_type"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_adapter_id" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/recycler_adapter_avartar_url"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="actorid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_adapter_actorid" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/recycler_adapter_avartar_url"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_adapter_type" android:layout_marginTop="8dp"/>
    <TextView
            android:text="actorlogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_adapter_actorlogin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_adapter_actorid"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/recycler_adapter_avartar_url" android:layout_marginStart="8dp"
    />
    <TextView
            android:text="actordisplaylogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_adapter_actordisplaylogin" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_adapter_avartar_url"/>
    <TextView
            android:text="actorgravatarid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_adapter_actorgravatarid" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_adapter_actordisplaylogin"/>
    <TextView
            android:text="actorurl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_adapter_actorurl" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_adapter_actorgravatarid"/>
    <TextView
            android:text="public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_adapter_public" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_adapter_actorurl"/>
    <TextView
            android:text="createdat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_adapter_createdat" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/recycler_adapter_public"
    />
    <Button
            android:text="repo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_adapter_repo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/recycler_adapter_createdat"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="vertical" app:layout_constraintGuide_percent=".5"/>
    <Button
            android:text="payload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_adapter_payload" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>